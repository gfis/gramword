    <display-name>gramword</display-name>
    <description>
        Show the grammatical type of words in German text
    </description>
    
    <!-- application parameters -->
    <context-param>     
        <param-name>user</param-name>
        <param-value>georg</param-value>
    </context-param>

    <!-- Servlets -->
    <servlet> 
        <servlet-name>Servlet</servlet-name>
        <servlet-class>org.teherba.gramword.web.GrammarServlet</servlet-class>
    </servlet>

    <servlet-mapping> 
        <servlet-name>Servlet</servlet-name>
        <url-pattern>/servlet</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping> 
        <servlet-name>Servlet</servlet-name>
        <url-pattern>/grammarservlet</url-pattern>
    </servlet-mapping>
    
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

